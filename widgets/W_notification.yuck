
(defwidget notification [?title urgency ?icon_path ?icon_color]
  (box :orientation "h"
       :height 40
       :class "notification ${urgency == 1 ? 'urgency_urgent' :
                              urgency == 2 ? 'urgency_important' : 'urgency_normal'}"

    (image :path "${icon_path}"
           :fill-svg "${icon_color}"
           :halign "start"
           :image-height 30)

    (label :text "${title}"
           :halign "end"
           :class "notification_title")
  )
)
