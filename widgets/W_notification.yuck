
(defwidget notification [?title urgency ?icon_path ?icon_color]
  (box :orientation "h"
       :class "notification" 

    (label :text "${icon_path}"
           :style "color: ${icon_color}"
           :halign "start")

    (label :text "${title}"
           :style "color: ${icon_color}"
           :halign "end")
  )
)
